<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="auth-background" stylesheets="@../../Styles/main.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.wirehec.front_wirehec.Controllers.LoginController">
    <StackPane alignment="CENTER" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <VBox alignment="CENTER" spacing="20" styleClass="auth-container" maxWidth="400.0" maxHeight="400.0">
            <Label styleClass="auth-title" text="Inicio de Sesión" />
            <GridPane hgap="15" vgap="15">
                <padding>
                    <Insets bottom="15" left="15" right="15" top="15" />
                </padding>
                <Label styleClass="auth-label" text="Nombre de Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="usernameField" styleClass="auth-input" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label styleClass="auth-label" text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <PasswordField fx:id="passwordField" styleClass="auth-input" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            </GridPane>
            <Button fx:id="loginButton" onAction="#handleLogin" styleClass="auth-primary-button" text="Iniciar Sesión" />
        </VBox>
    </StackPane>
</AnchorPane>
