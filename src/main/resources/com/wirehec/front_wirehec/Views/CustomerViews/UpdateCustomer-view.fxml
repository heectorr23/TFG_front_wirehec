<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.wirehec.front_wirehec.Controllers.UpdateCustomerController" styleClass="form-container" stylesheets="@../../Styles/main.css">
    <top>
        <Label text="Actualizar Cliente" styleClass="form-title" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <padding>
                <Insets top="20" left="20" right="20" bottom="20"/>
            </padding>
            <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="form-input"/>
            <Label text="Contacto:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="contactoField" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="form-input"/>
            <Label text="Teléfono:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="telefonoField" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="form-input"/>
            <Label text="Identificación:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="identificacionField" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="form-input"/>
            <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="emailField" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="form-input"/>
            <Label text="Zona:" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="form-label"/>
            <ComboBox fx:id="zonaComboBox" GridPane.rowIndex="5" GridPane.columnIndex="1" styleClass="form-input"/>
            <Label text="Dirección:" GridPane.rowIndex="6" GridPane.columnIndex="0" styleClass="form-label"/>
            <TextField fx:id="direccionField" GridPane.rowIndex="6" GridPane.columnIndex="1" styleClass="form-input"/>
        </GridPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <Button text="Guardar" onAction="#handleSave" styleClass="crud-button"/>
            <Button text="Cancelar" onAction="#handleCancel" styleClass="crud-button"/>
        </HBox>
    </bottom>
</BorderPane>