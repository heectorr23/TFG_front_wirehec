<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.wirehec.front_wirehec.Controllers.AddSupplierController" stylesheets="@../../Styles/main.css">
    <top>
        <Label text="Añadir Proveedor" styleClass="header-title" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <GridPane hgap="10" vgap="10" alignment="CENTER">
            <padding>
                <Insets top="20" left="20" right="20" bottom="20"/>
            </padding>
            <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nombreField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="CIF:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="cifField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Categoría:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ComboBox fx:id="categoriaComboBox" promptText="Selecciona una categoría" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Label text="Producto:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="productoField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <Button text="Guardar" onAction="#handleSave" styleClass="crud-button"/>
            <Button text="Cancelar" onAction="#closeWindow" styleClass="crud-button"/>
        </HBox>
    </bottom>
</BorderPane>